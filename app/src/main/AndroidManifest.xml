<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adrianrusso.painmanagementphysicianside">

    <application
        android:allowBackup="true"
        android:configChanges="orientation"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.PainManagementPhysicianSide">
        <activity
            android:name="com.adrianrusso.painmanagementphysicianside.activites.UserProfile"
            android:exported="false" />
        <activity
            android:name="com.adrianrusso.painmanagementphysicianside.activites.PatientSummary"
            android:exported="false" />
        <activity
            android:name="com.adrianrusso.painmanagementphysicianside.activites.Patients"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.adrianrusso.painmanagementphysicianside.activites.Messages"
            android:exported="false" />
        <activity
            android:name="com.adrianrusso.painmanagementphysicianside.activites.HelpSection"
            android:exported="false" />
        <activity
            android:name="com.adrianrusso.painmanagementphysicianside.activites.Homescreen"
            android:exported="false" />
        <activity
            android:name="com.adrianrusso.painmanagementphysicianside.activites.TwoFactorAuthentication"
            android:exported="false" />
        <activity
            android:name="com.adrianrusso.painmanagementphysicianside.activites.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>